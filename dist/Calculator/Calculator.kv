#:kivy 1.8.0
<Button>
    font_size: 32
    size_hint: (.2, .2)
    background_normal: ''
    background_color:  "#DE5628" 
    
<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 1
        padding: 0
        
        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 65
            size_hint: (1, .15)

        GridLayout:
            cols: 4
            rows: 5
            spacing: 2
            
            #row
            Button:
                text:"%"                
            
            Button:
                id: clear
                text:"C" 
                on_press: root.clear() 
            
            Button:
                text:"<<-"
                on_press: root.delete()
            
            Button:
                text:"/"
                on_press: root.math_sign("/")
            
            #row
            Button:
                text:"7"
                background_color:  "#FAB42D"
                on_press: root.button_press(7)               
            
            Button:
                text:"8"
                background_color:  "#FAB42D"
                on_press: root.button_press(8) 
            Button:
                text:"9"  
                background_color:  "#FAB42D"
                on_press: root.button_press(9) 
            Button:
                text:"*"
                on_press: root.math_sign("*")
            
            #row
            Button:
                text:"4"   
                background_color:  "#FAB42D" 
                on_press: root.button_press(4)             
            
            Button:
                text:"5"
                background_color:  "#FAB42D"
                on_press: root.button_press(5) 
                
            Button:
                text:"6"  
                background_color:  "#FAB42D"
                on_press: root.button_press(6) 

            Button:
                text:"-"
                on_press: root.math_sign("-")
            #row
            Button:
                text:"1"  
                background_color:  "#FAB42D" 
                on_press: root.button_press(1)              
            
            Button:
                text:"2"
                background_color:  "#FAB42D"
                on_press: root.button_press(2) 
                
            Button:
                text:"3" 
                background_color:  "#FAB42D" 
                on_press: root.button_press(3) 

            Button:
                text:"+"
                on_press: root.math_sign("+")
            #row
            Button:
                text:"+/-" 
                background_color:  "#FAB42D"
                on_press: root.pos_neg()               
            
            Button:
                text:"0"
                background_color:  "#FAB42D"
                on_press: root.button_press(0) 
                
            Button:
                text:"."  
                background_color:  "#FAB42D"
                on_press: root.dot()

            Button:
                text:"="
                on_press: root.equals()
